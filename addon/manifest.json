{
  "manifest_version": 2,
  "name": "History browser",
  "version": "1.0.0",
  "description": "Browse your firefox history like a boss.",
  "icons": {
    "32": "icons/history-32.png"
  },
  "permissions": [
    "history"
  ],
  "browser_action": {
    "default_icon": "icons/history-32.png",
    "default_title": "history",
    "default_popup": "popup/left-pad.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background_scripts/index.js"
    ]
  }
}
